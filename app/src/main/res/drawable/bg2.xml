<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient gives depth -->
    <gradient
        android:startColor="#F5F5F5"
        android:endColor="#E0E0E0"
        android:angle="270" />

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Thin border -->
    <stroke
        android:width="1dp"
        android:color="#BDBDBD" />

    <!-- Slight padding for icon breathing space -->
    <padding
        android:left="6dp"
        android:top="6dp"
        android:right="6dp"
        android:bottom="6dp" />
</shape>
